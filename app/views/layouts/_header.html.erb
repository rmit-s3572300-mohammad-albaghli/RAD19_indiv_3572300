<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "YOURCOURSE", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Coordinators", coordinators_path %></li>
          <li class="dropdown">
             <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Category<span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Web Development", courses_category_path(:filter => "Web Development") %></li>
                <li><%= link_to "Full Stack Dev", courses_category_path(:filter => "Full Stack Dev") %></li>
                <li><%= link_to "IOS Engineering", courses_category_path(:filter => "IOS Engineering") %></li>
                <li class="divider"></li>
                <li><a href="#"><%= link_to "All Courses", courses_path %></a></li>
              </ul>
          </li>
          <li class="dropdown">
             <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Location<span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                 <li><%= link_to "14.10.31", courses_location_path(:filter => "14.10.31") %></li>
                 <li><%= link_to "14.8.26", courses_location_path(:filter => "14.8.26") %></li>
                 <li><%= link_to "14.10.30", courses_location_path(:filter => "14.10.30") %></li>
                 <li class="divider"></li>
                 <li><a href="#"><%= link_to "All Courses", courses_path %></a></li>
              </ul>
          </li>
          <% if logged_in %>
            <li><%= link_to "New Course", "#" %></li>
            <li class="dropdown">
               <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.name %><span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                   <li><a href="#"><%= link_to "View Profile", user_path(current_user) %></a></li>
                   <li><a href="#"><%= link_to "Edit Profile", edit_user_path(current_user) %></a></li>
                   <li class="divider"></li>
                   <li><a href="#"><%= link_to "Log Out", logout_path, method: :delete %></a></li>
                </ul>
            </li>
          <% else %>
            <li><%= link_to "Log In", login_path %></li>
          <% end %>
      </ul>
    </nav>
  </div>
</header>