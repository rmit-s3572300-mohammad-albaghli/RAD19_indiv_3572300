<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "YOURCOURSE", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Coordinators", coordinators_path %></li>
          <li class="dropdown">
             <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Category<span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <% Category.all.each do |category| %>
                 <li><%= link_to category.name, courses_category_path(:filter => category.name) %></li>
                <% end %>
                <li class="divider"></li>
                <li><%= link_to "All Courses", courses_path %></a></li>
                <% if logged_in %>
                 <li><%= link_to "Create Category", new_category_path %></li>
                <% end %>
              </ul>
          </li>
          <li class="dropdown">
             <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Location<span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <% Location.all.each do |category| %>
                 <li><%= link_to category.name, courses_location_path(:filter => category.name) %></li>
                <% end %>
                <li class="divider"></li>
                <li><%= link_to "All Courses", courses_path %></a></li>
                <% if logged_in %>
                 <li><%= link_to "Create Category", new_location_path %></li>
                <% end %>
              </ul>
          </li>
          <% if logged_in %>
            <li><%= link_to "New Course", new_course_path %></li>
            <li class="dropdown">
               <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.name %><span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                   <li><a href="#"><%= link_to "View Profile", user_path(current_user) %></a></li>
                   <li><a href="#"><%= link_to "Edit Profile", edit_user_path(current_user) %></a></li>
                   <li class="divider"></li>
                   <li><a href="#"><%= link_to "Log Out", logout_path, method: :delete %></a></li>
                </ul>
            </li>
          <% else %>
            <li><%= link_to "Log In", login_path %></li>
          <% end %>
      </ul>
    </nav>
  </div>
</header>