<h1>All Courses</h1>
<hr>
<div>
  <% @courses.each do |course| %>
  <div class="course-wrapper">
    <div class="course-left">
    <h4>Coordinator:</h4>
    <% @users.each do |user| %>
      <% if user.id == course.user_id %>
        <%= gravatar_for user %>
        <%= user.name %>
      <% end %>
    <% end %>
    </div>
    <div class="course-right">
    <ul class="courses">
        <li>Course Name: <%= course.name %></li>
        <li>Prerequisite: <%= course.prerequisite %></li>
        <li>Category: 
        <% course.categories.each do |category| %>
          <% if course.categories.first == category %>
            <%= category.name %>
          <% else %>
            , <%= category.name %>
          <% end %>
        <% end %>
        </li>
        <li>Location:
        <% course.locations.each do |location| %>
          <% if course.locations.first == location %>
            <%= location.name %>
          <% else %>
            , <%= location.name %>
          <% end %>
        <% end %></li>
        <li>Created <%= time_ago_in_words(course.created_at) %> ago</li>
        <li>Like: <%= course.like %></li>
        <li>Dislike: <%= course.dislike %></li>
    </ul>
    </div>
  </div>
  <% end %>
</div>